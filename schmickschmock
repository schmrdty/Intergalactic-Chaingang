<body>

<div class="embed-container">
    <iframe id="tiktokFrame" src="" frameborder="0" allowfullscreen></iframe>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const tiktokURL = 'https://www.tiktok.com/@schmrdty/video/7392968547082702111?_r=1&_t=8o86mb6IsCk';
        embedTikTok(tiktokURL);
    });

    function embedTikTok(url) {
        const tiktokFrame = document.getElementById('tiktokFrame');
        tiktokFrame.src = `https://www.tiktok.com/embed/v2/${getVideoId(url)}`;
    }

    function getVideoId(url) {
        const regex = /\/video\/(\d+)/;
        const match = url.match(regex);
        return match ? match[1] : '';
    }
</script>

</body>
